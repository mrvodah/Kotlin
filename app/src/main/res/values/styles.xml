<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppThemeForHome" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_text_blue</item>
        <item name="colorPrimaryDark">@color/color_text_blue</item>
        <item name="colorAccent">@color/color_text_blue</item>
    </style>

</resources>
